# CoTURN Environment Variables
# Copy this to .env and update with your values

# Your server's public IP address (required)
EXTERNAL_IP=YOUR_SERVER_PUBLIC_IP

# Authentication credentials
TURN_USERNAME=nully
TURN_PASSWORD=nully123!@#
TURN_SECRET=nully-super-secret-key-2025

# Domain/Realm
TURN_REALM=nully.app

# Ports (default values)
TURN_PORT=3478
TURN_TLS_PORT=5349
TURN_ALT_PORT=80
TURN_ALT_TLS_PORT=443

# Performance settings
TURN_MAX_BPS=100000
TURN_TOTAL_QUOTA=100
TURN_USER_QUOTA=50

# Optional: Database settings for production
# DB_HOST=coturn-db
# DB_PORT=5432
# DB_NAME=coturn
# DB_USER=coturn
# DB_PASSWORD=secure_password_here