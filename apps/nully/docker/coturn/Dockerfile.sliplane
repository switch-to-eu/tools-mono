# CoTURN TURN Server for Sliplane Deployment (Standalone)
FROM coturn/coturn:4.6.2

# Install additional utilities
USER root
RUN apt-get update && apt-get install -y \
    curl \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Create necessary directories
RUN mkdir -p /var/log/coturn /etc/coturn/certs
RUN chown -R nobody:nogroup /var/log/coturn

# Create base configuration file inline
RUN cat > /etc/coturn/turnserver.conf << 'EOF'
# CoTURN Configuration for Nully App
# High-performance TURN server configuration

# Listening interfaces and ports
listening-port=3478
tls-listening-port=5349
alt-listening-port=80
alt-tls-listening-port=443

# Relay interfaces
relay-ip=0.0.0.0

# Authentication
# Use static credentials for simplicity
user=nully:nully123!@#
# Or use dynamic auth with secret
use-auth-secret
static-auth-secret=nully-super-secret-key-2025

# Security settings
fingerprint
lt-cred-mech

# Enable both UDP and TCP relay
no-udp-relay=false
no-tcp-relay=false

# Logging
verbose
log-file=/var/log/turnserver.log

# Performance tuning
max-bps=100000
total-quota=100
user-quota=50

# Realm (your domain)
realm=nully.app

# Additional security
no-cli
no-loopback-peers
no-multicast-peers

# Enable STUN
stun-only=false

# WebRTC compatibility
mobility
keep-address-family

# Disable TLS v1.0/1.1 for security
no-tlsv1
no-tlsv1_1

# Enable modern cipher suites
cipher-list="ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256"

# Misc settings
prod
check-origin-consistency
EOF

# Create entrypoint script inline
RUN cat > /usr/local/bin/entrypoint.sh << 'EOF'
#!/bin/bash
set -e

# CoTURN Dynamic Configuration for Sliplane
echo "ğŸš€ Starting CoTURN TURN Server on Sliplane..."

# Get external IP from Sliplane environment or detect it
EXTERNAL_IP=${SLIPLANE_DOMAIN:-${EXTERNAL_IP:-$(curl -s ifconfig.me || curl -s ipinfo.io/ip || echo "127.0.0.1")}}

echo "ğŸ“ Using external IP/domain: $EXTERNAL_IP"

# Create dynamic configuration
cat > /tmp/turnserver-dynamic.conf << EOFCONF
# CoTURN Configuration for Sliplane - Auto-generated
listening-port=3478
tls-listening-port=5349
alt-listening-port=80
alt-tls-listening-port=443

# Use Sliplane domain or external IP
external-ip=$EXTERNAL_IP
relay-ip=0.0.0.0

# Authentication
user=${TURN_USERNAME:-nully}:${TURN_PASSWORD:-nully123!@#}
use-auth-secret
static-auth-secret=${TURN_SECRET:-nully-super-secret-key-2025}

# Security
fingerprint
lt-cred-mech

# Performance
max-bps=${TURN_MAX_BPS:-100000}
total-quota=${TURN_TOTAL_QUOTA:-100}
user-quota=${TURN_USER_QUOTA:-50}

# Relay configuration
no-udp-relay=false
no-tcp-relay=false

# Logging
verbose
log-file=/var/log/coturn/turnserver.log

# Security settings
no-cli
no-loopback-peers
no-multicast-peers
stun-only=false
mobility
keep-address-family

# Realm
realm=${TURN_REALM:-nully.app}

# Port ranges for relay
min-port=49160
max-port=49200

# Production settings
prod
check-origin-consistency

# Additional security
no-tlsv1
no-tlsv1_1
cipher-list="ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256"
EOFCONF

# Merge with base configuration if it exists
if [ -f "/etc/coturn/turnserver.conf" ]; then
    echo "ğŸ“ Merging with base configuration..."
    cat /etc/coturn/turnserver.conf /tmp/turnserver-dynamic.conf > /tmp/turnserver-final.conf
else
    cp /tmp/turnserver-dynamic.conf /tmp/turnserver-final.conf
fi

# Create log directory and set permissions
mkdir -p /var/log/coturn
touch /var/log/coturn/turnserver.log

# Display configuration for debugging
echo "ğŸ”§ TURN Server Configuration:"
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo "External IP/Domain: $EXTERNAL_IP"
echo "TURN UDP: turn:$EXTERNAL_IP:3478" 
echo "TURN TCP: turn:$EXTERNAL_IP:3478?transport=tcp"
echo "TURN TLS: turns:$EXTERNAL_IP:5349"
echo "Alt Port 80: turn:$EXTERNAL_IP:80"
echo "Alt Port 443: turn:$EXTERNAL_IP:443?transport=tcp"
echo "Username: ${TURN_USERNAME:-nully}"
echo "Password: ${TURN_PASSWORD:-nully123!@#}"
echo "Realm: ${TURN_REALM:-nully.app}"
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

# Start CoTURN with dynamic configuration
echo "ğŸŒŸ Starting CoTURN TURN server..."
exec /usr/bin/turnserver -c /tmp/turnserver-final.conf --listening-port=3478 --verbose
EOF

# Make entrypoint executable
RUN chmod +x /usr/local/bin/entrypoint.sh

# Expose ports for TURN server
# Standard TURN ports
EXPOSE 3478/udp 3478/tcp
# TLS TURN ports  
EXPOSE 5349/udp 5349/tcp
# Alternative ports for firewall traversal
EXPOSE 80/tcp 443/tcp
# RTP relay ports range
EXPOSE 49160-49200/udp

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD netstat -tuln | grep -E ':(3478|5349|80|443)\s' || exit 1

# Switch to non-root user for security
USER nobody

# Use custom entrypoint for dynamic configuration
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]